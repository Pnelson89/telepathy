<!DOCTYPE html>
<html>
  <head>
    <title>Telepathy</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="flash-messages">
      <% flash.each do |key, message| %>
        <div class="flash-<%= key %>">
          <p><%= message %></p>
        </div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
